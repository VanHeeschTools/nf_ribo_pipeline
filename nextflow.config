params {
    // Input files and paths
    project_folder="./"
    resource_folder="/hpc/pmc_vanheesch/shared_resources/GENOMES/Homo_sapiens.GRCh38"
    container_folder="/hpc/local/Rocky8/pmc_vanheesch/singularity_images"
    input="${params.project_folder}/documentation/test_samplesheet.csv"
    pandoc_dir="/usr/src/pandoc/bin" // Location in container where pandoc is installed for RMD knitting
    package_install_loc="/hpc/local/Rocky8/pmc_vanheesch/Rstudio_Server_Libs/Rstudio_4.1.2_libs" // Location where to install BSGenome package for annotation
    gedi_exec_loc="/hpc/local/Rocky8/pmc_vanheesch/software/gedi-1.0.6" // Placeholder until gedi container works

    // Reference files
    reference_gtf="${params.resource_folder}/102/annotation/Homo_sapiens.GRCh38.102.gtf" // this can either be a custom transcriptome or an ensembl ref GTF
    reference_fasta="${params.resource_folder}/102/Homo_sapiens.GRCh38.dna.primary_assembly.fa" // Genome assembly in FASTA format
    reference_twobit="${params.resource_folder}/102/Homo_sapiens.GRCh38.dna.primary_assembly.2bit" // Required for R annotation generation
    contaminants_fasta="${params.resource_folder}/20221115_rnacentral_contaminants.fasta" // we have an example fasta in ./assets/
    
    // Can be supplied, can also be generated by the pipeline
    orfquant_annotation="${params.reference_gtf}_Rannot" // R annotation file required for ORFquant
    orfquant_annot_package="${params.resource_folder}/102/annotation/BSgenome.Homo.sapiens.GRCh38.102/" // R package with annotation files
    star_index_path="${params.resource_folder}/102/STAR/2.7.8a/29nt" // STAR index path
    bowtie2_index_path="${params.resource_folder}/102/bowtie2/2.4.2/rnacentral_contaminants" // Bowtie2 index path
    price_index_path="" // PRICE index path

    // Max analysis options
    max_memory                 = '128.GB'
    max_cpus                   = 16
    max_time                   = '240.h'

    // Output options
    orfquant_prefix="orfquant_test" // naming of merged ORFquant files
    price_prefix="price_test" // naming of merged PRICE files
    outdir = "${params.project_folder}/analysis"
    keep_sam = false          // Keep contaminant SAMs for debugging

    // Pipeline steps
    help = false
    ribo_qc = true      // Generate QC figures
    run_orfquant = true // ORF calling with ORFquant
    run_price = true    // ORF calling with PRICE
    annotation = false  // ORF annotation & harmonisation
    expression = false  // ORF expression
}

manifest {
    name            = 'jipvandinter/nf_ribo_pipeline'
    author          = 'Jip van Dinter, Damon Hofman'
    homePage        = 'https://github.com/jipvandinter/nf_ribo_pipeline/'
    defaultBranch   = 'main'
    description     = 'Ribosome profiling pipeline that includes scrubbing sequences, alignment, QC, P-site cut-off calculations and ORF annotation by multiple ORF callers'
    mainScript      = 'main.nf'
    nextflowVersion = '>=23.04.4'
    version         = 'v0.1'
}

includeConfig "${params.project_folder}/configs/base.config"
